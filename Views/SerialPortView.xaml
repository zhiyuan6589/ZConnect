<UserControl x:Class="ZConnect.Views.SerialPortView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZConnect.Views"
             xmlns:models="clr-namespace:ZConnect.Models"
             xmlns:services="clr-namespace:ZConnect.Services"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="900">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="DataFormatValues"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:DataFormatEnum"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="AvailableSerialPorts"
                            ObjectType="{x:Type services:SerialPortService}"
                            MethodName="GetAvailablePorts"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Grid.IsSharedSizeScope="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="10" HorizontalContentAlignment ="Center" Content="Serial Port" FontSize="20" FontWeight="Bold"/>

            <Label Grid.Column="0" Grid.Row="1" Margin="0 5 0 5" Content="PortName:" />
            <ComboBox Grid.Column="1" Grid.Row="1" Margin="10 5 0 5"
                      ItemsSource="{Binding Source={StaticResource AvailableSerialPorts}}"
                      SelectedItem="{Binding Connection.PortName, Mode=TwoWay}"/>

            <Label Grid.Column="0" Grid.Row="2" Margin="0 5 0 5" Content="BaudRate:" />
            <ComboBox Grid.Column="1" Grid.Row="2" Margin="10 5 0 5"
                      ItemsSource="{Binding StandardBaudRates}"
                      SelectedItem="{Binding Connection.BaudRate, Mode=TwoWay}"/>

            <Label Grid.Column="0" Grid.Row="3" Margin="0 5 0 5" Content="Parity:" />
            <ComboBox Grid.Column="1" Grid.Row="3" Margin="10 5 0 5"
                      ItemsSource="{Binding ParityValues}"
                      SelectedItem="{Binding Connection.Parity, Mode=TwoWay}"/>

            <Label Grid.Column="0" Grid.Row="4" Margin="0 5 0 5" Content="DataBits:" />
            <ComboBox Grid.Column="1" Grid.Row="4" Margin="10 5 0 5"
                      ItemsSource="{Binding DataBitsValues}"
                      SelectedItem="{Binding Connection.DataBits, Mode=TwoWay}"/>

            <Label Grid.Column="0" Grid.Row="5" Margin="0 5 0 5" Content="StopBits:" />
            <ComboBox Grid.Column="1" Grid.Row="5" Margin="10 5 0 5"
                      ItemsSource="{Binding StopBitsValues}"
                      SelectedItem="{Binding Connection.StopBits, Mode=TwoWay}"/>

            <Label Grid.Column="0" Grid.Row="6" Margin="0 5 0 5" Content="Handshake:"/>
            <ComboBox Grid.Column="1" Grid.Row="6" Margin="10 5 0 5"
                      ItemsSource="{Binding HandshakeValues}"
                      SelectedItem="{Binding Connection.Handshake, Mode=TwoWay}"/>

            <Label Grid.Column="0" Grid.Row="7" Margin="0 5 0 5" Content="Status:"/>
            <TextBlock Grid.Column="1" Grid.Row="7" Width="80" Margin="10 5 0 5" 
                      Text="{Binding Status}" VerticalAlignment="Center"/>

            <Button Grid.Column="0" Grid.Row="8" Width="80" 
                Content="Open"  Command="{Binding OpenCommand}" />
            <Button Grid.Column="1" Grid.Row="8" Width="80" 
                Content="Close" Command="{Binding CloseCommand}" />
        </Grid>

        <Grid Grid.Column="1">
            <local:CommonPanelView DataContext="{Binding}"/>
        </Grid>
    </Grid>
</UserControl>
