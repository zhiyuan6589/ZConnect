<UserControl x:Class="ZConnect.Views.CommonPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZConnect.Views"
             xmlns:models="clr-namespace:ZConnect.Models"
             xmlns:services="clr-namespace:ZConnect.Services"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="DataFormatValues"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:DataFormatEnum"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Content="ReceiveFormat:"/>
            <ComboBox Width="65"
                ItemsSource="{Binding Source={StaticResource DataFormatValues}}"
                SelectedItem="{Binding ReceiveFormat, Mode=TwoWay}"/>

            <Button Width="80" Margin="20 0 0 0"
                Content="Clear" Command="{Binding ClearTextCommand}"/>
        </StackPanel>

        <GroupBox Grid.Row="1" Margin="0 10 0 0" VerticalAlignment="Stretch" Header="Receive:">
            <Border Background="#FAFAFA" Padding="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" ScrollChanged="ScrollViewer_ScrollChanged">
                    <TextBlock Text="{Binding ReceivedText}" FontFamily="Consolas" TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>
        </GroupBox>

        <Grid Grid.Row="2" Margin="0 20 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="SendFormat:"/>
            <ComboBox Grid.Column="1" Width="65"
                ItemsSource="{Binding Source={StaticResource DataFormatValues}}"
                SelectedItem="{Binding SendFormat, Mode=TwoWay}"/>

            <Label Grid.Column="2" Margin="20 0 0 0" Content="IntervalMs:"/>
            <TextBox Grid.Column="3" Width="50" 
                Text="{Binding IntervalMs}"
                Style="{StaticResource VerticalCenterTextBox}"/>

            <CheckBox Grid.Column="4"  Margin="20 0 0 0" VerticalContentAlignment="Center" 
                      Content="AutoSend" IsChecked="{Binding AutoSend, Mode=TwoWay}"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0 10 0 0">
            <Label Content="Send:"/>
            <TextBox Width="250" Text="{Binding SendText}" Style="{StaticResource VerticalCenterTextBox}"/>
            <Button Margin="20 0 0 0" Width="80" Content="Send" Command="{Binding SendCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
