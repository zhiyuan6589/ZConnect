<Window x:Class="ZConnect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZConnect.Views"
        mc:Ignorable="d"
        Title="ZConnect" Height="600" Width="1000">
    <Window.Resources>
        <local:TcpClientView x:Key="TcpClientView"/>
        <local:TcpServerView x:Key="TcpServerView"/>
    </Window.Resources>

    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Content="TCP Server" Click="ShowTcpServer"/>
            <Button Content="TCP Client" Click="ShowTcpClient"/>
        </StackPanel>
        <ContentControl x:Name="MainContent"/>
    </DockPanel>
</Window>
