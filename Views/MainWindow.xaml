<Window x:Class="ZConnect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZConnect.Views"
        mc:Ignorable="d"
        Title="ZConnect" Height="530" Width="780" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Icon="pack://application:,,,/ZConnect;component/Resources/logo.ico">
    
    <Window.Resources>
        <local:TcpServerView x:Key="TcpServerView"/>
        <local:TcpClientView x:Key="TcpClientView"/>
        <local:UdpClientView x:Key="UdpClientView"/>
        <local:SerialPortView x:Key="SerialPortView"/>
    </Window.Resources>

    <Grid>
        <TabControl>
            <TabItem Header="Tcp Server">
                <ContentControl Content="{StaticResource TcpServerView}"/>
            </TabItem>

            <TabItem Header="Tcp Client">
                <ContentControl Content="{StaticResource TcpClientView}"/>
            </TabItem>

            <TabItem Header="Udp Client">
                <ContentControl Content="{StaticResource UdpClientView}"/>
            </TabItem>

            <TabItem Header="Serial Port">
                <ContentControl Content="{StaticResource SerialPortView}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
