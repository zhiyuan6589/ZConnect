<Window x:Class="ZConnect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZConnect"
        mc:Ignorable="d"
        Title="ZConnect" Height="500" Width="700">
    <Grid Margin="10" RowDefinitions="Auto,Auto,*,Auto">
        <!--Margin="10,10,10,10"-->
        <!--Margin="Left,Top,Right,Bottom"-->
        <!--RowDefinitions: Auto:Height adaptable to content; *:Take up remaining space-->
        <StackPanel Orientation="Horizontal" Margin="5 5">
            <Label Content="IP:"/>
            <!--Margin="5 0"-->
            <!--Margin="Left&Right Top&Bottom"-->
            <TextBox Width="70"
                 Height="25"
                 FontSize="12"
                 Text="{Binding Connection.RemoteIp}">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid VerticalAlignment="Center">
                                <ScrollViewer x:Name="PART_ContentHost"
                                  Focusable="false" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            
            <Label Margin="20 0 0 0" Content="Port:"/>
            <TextBox Width="40"
                 Height="25"
                 FontSize="12"
                 Text="{Binding Connection.RemotePort}">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid VerticalAlignment="Center">
                                <ScrollViewer x:Name="PART_ContentHost"
                                    Focusable="false" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>

            <Label Margin="20 0 0 0" Content="ConnectionStatus:"/>
            <TextBlock Text="{Binding IsConnected}" VerticalAlignment="Center"/>

            <Button Margin="20 0 0 0" Content="Connect" Width="80" Click="Connect_Click"/>
            <Button Margin="20 0 0 0" Content="Disconnect" Width="80" Click="Disconnect_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="auto" Margin="5 5">
            <Label Content="StatusMessage:"/>
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
        </StackPanel>

        <GroupBox Header="ReceiveData:" Grid.Row="2" Margin="5 5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding ReceivedText}" FontFamily="Consolas" TextWrapping="Wrap"/>
                <!--TextWrapping="Wrap": Automatically wrap text when it exceeds the width of the control-->
            </ScrollViewer>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="5 5">
            <TextBox Width="500"
                 Height="30"
                 FontSize="12"
                 Text="{Binding SendText}">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid VerticalAlignment="Center">
                                <ScrollViewer x:Name="PART_ContentHost"
                                    Focusable="false" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <Button Content="Send" Width="80" Margin="10 0 0 0" Click="Send_Click"/>
        </StackPanel>
    </Grid>
</Window>
